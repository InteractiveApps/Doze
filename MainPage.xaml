<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Doze"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:Universal="using:Microsoft.AdMediator.Universal"
	  x:Class="Doze.MainPage"
	  mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid VerticalAlignment="Top"
			  HorizontalAlignment="Stretch"
			  Background="#f2b632">

			<TextBlock Text="DOZE"
					   Grid.Column="1"
					   FontFamily="Impact"
					   Foreground="#252839"
					   CharacterSpacing="1000"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontSize="30" />
		</Grid>

		<RelativePanel Grid.Row="1"
					   HorizontalAlignment="Stretch"
					   VerticalAlignment="Stretch">

			<TextBlock RelativePanel.AlignRightWithPanel="True"
					   RelativePanel.AlignTopWithPanel="True"
					   Text="🔌"
					   FontSize="50"/>
			
			<Ellipse Height="350"
					 Width="350"
					 Fill="#252839"
					 Opacity=".5"
					 RelativePanel.AlignHorizontalCenterWithPanel="True"
					 RelativePanel.AlignVerticalCenterWithPanel="True"/>

			<local:BatteryControl x:Name="BatteryAsset"
								  RelativePanel.AlignHorizontalCenterWithPanel="True"
								  RelativePanel.AlignVerticalCenterWithPanel="True" />

		</RelativePanel>
		
		<Button Content="low battry"
				Click="Button_Click"/>

		<CommandBar Grid.Row="1"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Bottom"
					ClosedDisplayMode="Compact">

			<AppBarButton Icon="Favorite"
						  Label="Rate Us" />
			<AppBarSeparator />
			<AppBarButton Icon="Setting"
						  Label="Settings" />

			<CommandBar.SecondaryCommands>

				<AppBarButton Label="About" />
				<AppBarButton Label="Other Apps" />
				<AppBarButton Label="Donate" />

			</CommandBar.SecondaryCommands>

		</CommandBar>
	</Grid>

</Page>